/* Main Config (wallpaper) */

@import "~/.config/rofi/config.rasi"  

/* ---- Configuration ---- */ 
configuration {
  modi: "drun";
}

window {
  width: 60%;
}

/* ---- Mainbox ---- */
mainbox {
  children:
    [ "inputbar", "listview"];
}

entry {
  expand: true;
  placeholder: " 🎞️ Search / Choose Wallpaper";
  horizontal-align: 0.0;
}

/* ---- Listview ---- */
listview {
  columns: 5;
  lines: 3;
  flow: horizontal;
}

/* ---- Element ---- */
element {
  orientation: vertical;
}

element-icon {
  size: 10%;
}

element-text {
  vertical-align: 0.5;
  horizontal-align: 0.5;
}
